@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="custom-row" >
    <div class="row">
        <div class="col-md-3">


            <p><a class="btn btn-default" onclick="ShowHideDiv('create')">Create Movie &raquo;</a></p>
        </div>
        <div class="col-md-3">


            <p><a class="btn btn-default" onclick="ShowHideDiv('update')">Update Movie &raquo;</a></p>
        </div>
        <div class="col-md-3">


            <p><a class="btn btn-default" onclick="ShowHideDiv('delete')">Delete Movie &raquo;</a></p>
        </div>
        <div class="col-md-3">


            <p><a class="btn btn-default" onclick="ShowHideDiv('show')">Show Movies &raquo;</a></p>
        </div>
    </div>
</div>
<div class="custom-line"></div><br />
<div class="custom-row">
    <div class="row">
        <div class="custom-field-center" id="custom-field">
            <input type="text" placeholder="Movie name" id="moviename"><br />
            <input type="text" placeholder="Grade" id="grade"><br />
            <input type="text" placeholder="Lenght" id="length"><br />
            <input type="text" placeholder="Summary" id="summary">
        </div>
    </div>    
</div>

<script>
    function ShowHideDiv()
    {
        var div = document.getElementById("custom-field");
        if (div.style.display === "none")
        {
            div.style.display = "block";
        }
        else
        {
            div.style.display = "none";
        }
    }
</script>

